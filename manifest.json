{
    "manifest_version": 2,
    "name": "SightScript",
    "version": "1.0.0",
    "description": "A web extension to provide AI generated captions for images within websites.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "SightScript",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab"
    ]
}
